---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import NavbarMain from '../components/NavbarMain';
---

<Layout title="OnlyChefs - Ingresar">
	<NavbarMain client:load/>
	<section class="bg-gray-50">
		<div class="flex h-[90vh]">
		  <!-- Columna 1 -->
		  <div class="w-1/2 flex flex-col justify-center items-center bg-lime-200" >
			<!-- Logo del proyecto -->
			<img src="logo.png" alt="Logo del Proyecto" class="mb-20 mx-20"/>
	  
			<!-- Texto centrado -->
			<p class="text-center text-lg mx-20 " style="font-family:Manrope; font-size:45px; line-height:1">
			  Bienvenido al sitio número 1 dedicado totalmente a chefs principiantes y profesionales
		  </p>
		  </div>
	  
		  <!-- Columna 2 -->
		  <div class="w-1/2 flex flex-col justify-center p-8">
			<!-- Fila 1: Iniciar sesión -->
			<label class="mb-5", style="font-family:Manrope; font-size:50px">Iniciar sesión</label>
	  
			<!-- Fila 2: Textfield de correo electrónico -->
			<input type="email" placeholder="Correo Electrónico" class="bg-gray-200 border border-black-100 rounded-md p-2 mb-5 placeholder-gray-400" style="font-family:Roboto Serif" />
	  
			<!-- Fila 3: Textfield de contraseña -->
			<input type="password" placeholder="Contraseña" class="bg-gray-200 border border-gray-300 rounded-md p-2 mb-4 placeholder-gray-400" style="font-family:Roboto Serif" />
	  
			<!-- Fila 4: Botón de iniciar sesión -->
			<button class="text-white rounded-md p-2 mb-4 bg-lime-700" onclick="window.location.href='/'">
			  Iniciar sesión
		  </button>
			<div class="flex flex-col items-center">
			  <!-- Fila 5: Enlace "¿Olvidaste tu contraseña?" -->
			  <a href="#" class="underline text-blue-600 cursor-pointer mb-2">
				  ¿Olvidaste tu contraseña?
			  </a>
	  
			  <!-- Fila 6: Enlace "Registrarme" -->
			  <a href="/Register" class="underline text-blue-600 cursor-pointer mb-4">
				  Registrarme
			  </a>
		  </div>
	  
			<!-- Fila 7: Botones de inicio de sesión social -->
			<div class="grid grid-cols-2 gap-4"> 
			  <!--Facebook -->
			  <button type="button" class="text-white bg-[#3b5998] hover:bg-[#3b5998]/90 focus:ring-4 focus:outline-none focus:ring-[#3b5998]/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:focus:ring-[#3b5998]/55 me-2 mb-2">
				<svg class="w-4 h-4 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 8 19">
				<path fill-rule="evenodd" d="M6.135 3H8V0H6.135a4.147 4.147 0 0 0-4.142 4.142V6H0v3h2v9.938h3V9h2.021l.592-3H5V3.591A.6.6 0 0 1 5.592 3h.543Z" clip-rule="evenodd"/>
				</svg>
				Entrar con Facebook
				</button>
				<!--Google -->
			  <button type="button" class="text-white bg-[#db4a39] hover:bg-[#ffa700]/90 focus:ring-4 focus:outline-none focus:ring-[#db4a39]/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:focus:ring-[#4285F4]/55 me-2 mb-2">
				<svg class="w-4 h-4 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 19">
				<path fill-rule="evenodd" d="M8.842 18.083a8.8 8.8 0 0 1-8.65-8.948 8.841 8.841 0 0 1 8.8-8.652h.153a8.464 8.464 0 0 1 5.7 2.257l-2.193 2.038A5.27 5.27 0 0 0 9.09 3.4a5.882 5.882 0 0 0-.2 11.76h.124a5.091 5.091 0 0 0 5.248-4.057L14.3 11H9V8h8.34c.066.543.095 1.09.088 1.636-.086 5.053-3.463 8.449-8.4 8.449l-.186-.002Z" clip-rule="evenodd"/>
				</svg>
				Entrar con Google
				</button>
			  <!--Invitado -->
				<button type="button" class="text-white bg-[#24292F] hover:bg-[#24292F]/90 focus:ring-4 focus:outline-none focus:ring-[#24292F]/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:focus:ring-gray-500 dark:hover:bg-[#050708]/30 me-2 mb-2">
				  <svg class="w-4 h-4 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
				  <path fill-rule="evenodd" d="M10 .333A9.911 9.911 0 0 0 6.866 19.65c.5.092.678-.215.678-.477 0-.237-.01-1.017-.014-1.845-2.757.6-3.338-1.169-3.338-1.169a2.627 2.627 0 0 0-1.1-1.451c-.9-.615.07-.6.07-.6a2.084 2.084 0 0 1 1.518 1.021 2.11 2.11 0 0 0 2.884.823c.044-.503.268-.973.63-1.325-2.2-.25-4.516-1.1-4.516-4.9A3.832 3.832 0 0 1 4.7 7.068a3.56 3.56 0 0 1 .095-2.623s.832-.266 2.726 1.016a9.409 9.409 0 0 1 4.962 0c1.89-1.282 2.717-1.016 2.717-1.016.366.83.402 1.768.1 2.623a3.827 3.827 0 0 1 1.02 2.659c0 3.807-2.319 4.644-4.525 4.889a2.366 2.366 0 0 1 .673 1.834c0 1.326-.012 2.394-.012 2.72 0 .263.18.572.681.475A9.911 9.911 0 0 0 10 .333Z" clip-rule="evenodd"/>
				  </svg>
				  Entrar como invitado
				  </button>
			  <!--Twitter -->
			  <button type="button" class="text-white bg-[#1da1f2] hover:bg-[#1da1f2]/90 focus:ring-4 focus:outline-none focus:ring-[#1da1f2]/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:focus:ring-[#1da1f2]/55 me-2 mb-2">
				<svg class="w-4 h-4 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 17">
				<path fill-rule="evenodd" d="M20 1.892a8.178 8.178 0 0 1-2.355.635 4.074 4.074 0 0 0 1.8-2.235 8.344 8.344 0 0 1-2.605.98A4.13 4.13 0 0 0 13.85 0a4.068 4.068 0 0 0-4.1 4.038 4 4 0 0 0 .105.919A11.705 11.705 0 0 1 1.4.734a4.006 4.006 0 0 0 1.268 5.392 4.165 4.165 0 0 1-1.859-.5v.05A4.057 4.057 0 0 0 4.1 9.635a4.19 4.19 0 0 1-1.856.07 4.108 4.108 0 0 0 3.831 2.807A8.36 8.36 0 0 1 0 14.184 11.732 11.732 0 0 0 6.291 16 11.502 11.502 0 0 0 17.964 4.5c0-.177 0-.35-.012-.523A8.143 8.143 0 0 0 20 1.892Z" clip-rule="evenodd"/>
				</svg>
				Entrar con Twitter
				</button>
			</div>
		  </div>
		</div>
	  </section>
	<Footer />
</Layout>

