---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import NavbarMain from "../components/NavbarMain.jsx";
import CursoCard from "../components/CursoCard.astro";
import RecipeCard from "../components/RecipeCard.astro";
import Cursos from "../data/dataCurses.js";
import Recipes from "../data/dataRecipe.js";
---

<Layout title="OnlyChefs - Home">
	<!-- Navbar -->
	<NavbarMain client:load/>

	<!-- Hero Section -->
	<div
	class="relative flex items-center justify-center min-h-[70vh] bg-cover bg-center bg-no-repeat"
	style="background-image: url(https://plus.unsplash.com/premium_photo-1661778156582-670d5b62a9e4?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);"
>
	<!-- Fondo oscuro con opacidad -->
	<div class="absolute inset-0 bg-black bg-opacity-70"></div>

	<!-- Contenedor del texto -->
	<div class="relative flex inset-2 justify-center items-center text-white text-center">
		<div class="max-w-md mx-auto">
			<h1 class="mb-5 text-5xl font-bold drop-shadow-lg">OnlyChefs</h1>
			<p class="mb-5 drop-shadow-md">
				Ad√©ntrate en el mundo de los expertos en cocina. OnlyChefs te
				ofrece cursos y recetas de cocina tradicionales y modernas al
				alcance de todos.
			</p>
			<button class="bg-gradient-to-r from-lime-600 to-green-500 text-white font-bold py-3 px-6 rounded-full shadow-lg hover:shadow-2xl hover:from-lime-500 hover:to-green-400 transform hover:scale-105 transition-transform duration-300 ease-in-out"
			onclick="window.location.href='/curses'">
				Explora los cursos
			</button>			
		</div>
	</div>
</div>


	<!-- Featured Courses -->
	<section class="pt-4 pb-12">
		<div class="container mx-auto mt-9 px-4">
			<h2 class="text-2xl font-semibold mb-6">Cursos populares</h2>
			<div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-8">
				<!-- Curso Card -->
				{
					Cursos.map((curso) => (
						<CursoCard
							image={curso.image}
							title={curso.title}
							author={curso.author}
							rating={curso.rating}
							reviews={curso.reviews}
							price={curso.price}
						/>
					))
				}
			</div>
		</div>

		<div class="container mx-auto my-9 px-4">
			<h2 class="text-2xl font-semibold mb-6">Recetas populares</h2>
			<div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-8">
				<!-- Curso Card -->
				{
					Recipes.map((curso) => (
						<RecipeCard
							image={curso.image}
							title={curso.title}
							author={curso.author}
							rating={curso.rating}
							reviews={curso.reviews}
							price={curso.price}
						/>
					))
				}
			</div>
		</div>

		<div class="container mx-auto my-9 px-4">
			<h2 class="text-2xl font-semibold mb-6">Cursos Recomendados</h2>
			<div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-8">
				<!-- Curso Card -->
				{
					Cursos.map((curso) => (
						<CursoCard
							image={curso.image}
							title={curso.title}
							author={curso.author}
							rating={curso.rating}
							reviews={curso.reviews}
							price={curso.price}
						/>
					))
				}
			</div>
		</div>

		<div class="container mx-auto my-9 px-4">
			<h2 class="text-2xl font-semibold mb-6">Recetas Recomendadas</h2>
			<div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-8">
				<!-- Curso Card -->
				{
					Recipes.map((curso) => (
						<RecipeCard
							image={curso.image}
							title={curso.title}
							author={curso.author}
							rating={curso.rating}
							reviews={curso.reviews}
							price={curso.price}
						/>
					))
				}
			</div>
		</div>
	</section>

	<!-- Footer -->
	<Footer />
</Layout>